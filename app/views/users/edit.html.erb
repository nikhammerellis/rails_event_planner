<h1>Edit your profile</h1>
<div class="links">
<a href="<%= user_path %>">Events Dashboard</a> | 
<a href="/signout">Logout</a>
</div>
<br />
<%= form_for @user do |f| %>

<div class="field">
	<%= f.label :first_name %><br />
	<%= f.text_field :first_name %>
</div>
<br />
<div class="field">
	<%= f.label :last_name %><br />
	<%= f.text_field :last_name %>
</div>
<br />
<div class="field">
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</div>
<br />
<div class="field">
	<%= f.label :city %><br />
	<%= f.text_field :city %>
</div>
<br />
<div class="field">
	<%= f.label :state %><br />
	<%= f.select(:state, options_for_select(us_states, "WA")) %>
</div>
<br />
<p>*Password should be at least 8 characters</p>
<div class="field">
	<%= f.label :password %><br />
	<%= f.password_field :password %>
</div>
<br />
<div class="field">
	<%= f.label "Confirm Password" %><br />
	<%= f.password_field :password_confirmation %>
</div>
<br />
<div class="actions">
    <%= f.submit "Update Records" %>
 </div>

<% end %>
